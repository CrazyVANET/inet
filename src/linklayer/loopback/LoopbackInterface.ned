package inet.linklayer.loopback;

import inet.base.Nop;
import inet.linklayer.INic;


//
// Loopback interface. Complements the ~LoopbackMac module.
//
module LoopbackInterface like INic
{
    gates:
        input upperLayerIn;    // from upper layers
        output upperLayerOut;  // to upper layers
    submodules:
        nop: Nop;
    connections:
        upperLayerIn --> nop.in;
        nop.out --> upperLayerOut;
}

